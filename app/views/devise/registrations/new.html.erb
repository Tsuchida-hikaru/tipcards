<h2><%= t('.sign_up') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, maxlengh: "6", autofocus: true, placeholder: "ニックネーム（最大６文字）" %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
      <% minimum_pass = t('devise.shared.minimum_password_length', count: @minimum_password_length) %>
    <% end %>
    <%= f.password_field :password, placeholder: "新しいパスワード#{minimum_pass}" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, placeholder: "新しいパスワード（再入力）" %>
  </div>

  <div class="field">
    <%= f.label :publish_setting, "公開設定" do %>
      <i class="fas fa-globe"></i>：カードをデフォルトで公開する
      <%= f.check_box :publish_setting, { checked: true }, "true", "false" %>
      <%= f.label :publish_setting do %>
      <% end %>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit t('.sign_up') %>
  </div>
<% end %>
